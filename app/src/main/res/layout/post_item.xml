<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="23dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ownerImg"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_outsta_my"
            />
        <TextView
            android:id="@+id/ownerUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1d1d1d"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
       android:id="@+id/postHeart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/postImg"
            android:background="@drawable/outstar_bg_round"
            android:layout_width="match_parent"
            android:layout_height="412dp"/>
        <ImageView
            android:id="@+id/postImg_alpha"
            android:layout_width="match_parent"
            android:layout_height="412dp"
            android:background="@color/white"
            android:visibility="invisible"
            android:alpha=".3"/>
        <ImageView
            android:id="@+id/postGood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_like"
            android:visibility="invisible"
            android:layout_gravity="center"/>
    </FrameLayout>


    <TextView
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#1d1d1d"
        android:paddingTop="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>